{
  "name": "lakindu-qa-portfolio",
  "version": "2.0.0",
  "description": "Professional QA Engineer Portfolio - Modular, scalable, and enterprise-ready",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src/**/*.{js,ts} --fix",
    "format": "prettier --write src/**/*.{js,ts,css,html}",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "deploy": "npm run build && gh-pages -d dist",
    "start": "npm run dev",
    "clean": "rimraf dist",
    "validate": "npm run lint && npm run type-check && npm run test",
    "prepare": "husky install"
  },
  "dependencies": {
    "aos": "^2.3.4",
    "gsap": "^3.12.2",
    "lottie-web": "^5.12.2",
    "swiper": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "gh-pages": "^6.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "terser": "^5.44.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,html}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "portfolio",
    "qa-engineer",
    "quality-assurance",
    "testing",
    "automation",
    "playwright",
    "javascript",
    "typescript",
    "professional"
  ],
  "author": {
    "name": "Kavithi Thilakarathne",
    "email": "lakindudesilva007@gmail.com",
    "url": "https://lakinduqa.github.io"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LakinduQA/lakinduqa.github.io.git"
  },
  "homepage": "https://lakinduqa.github.io",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
